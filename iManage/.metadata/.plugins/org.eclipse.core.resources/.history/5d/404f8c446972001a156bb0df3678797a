package com.iManage.Client;

import javax.ws.rs.client.Client;
import javax.ws.rs.client.ClientBuilder;
import javax.ws.rs.client.Entity;
import javax.ws.rs.client.WebTarget;
import javax.ws.rs.core.Form;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;

public class Login {
	public static void main(String args[]) {
		
		Login log = new Login();
		
		System.out.println( log.checkuserinDB("john","John1234") );
	}
	
	public boolean checkuserinDB(String user,String pass) {
		 Client client = ClientBuilder.newClient();
		 WebTarget target = client.target("http://localhost:8181").path("iManageServer").path("rest").path("login").path("user");
		 System.out.println(target.getUri());
		 Form form = new Form();
		 form.param("user",user);
		 form.param("pass",pass);
		 Response validUser = target.request(MediaType.APPLICATION_JSON).post(Entity.entity(form,MediaType.APPLICATION_FORM_URLENCODED));
		 System.out.println(validUser.readEntity(String.class));
		 
		return validUser.readEntity(boolean.class);
	}
	
}
